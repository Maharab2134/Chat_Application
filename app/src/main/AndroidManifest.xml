<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chats">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.1111.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rounder"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chats"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity android:name="com.example.chats.Activities.Oth1ersProfileShow"
            android:exported="false"
            android:theme="@style/Theme.ChatsApp.NoActionBar">
        </activity>
        <activity
            android:name="com.example.chats.Activities.ProfileImageShow"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.chats.Activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chats.Activities.MyProfileShow"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.chats.Activities.GroupChat"
            android:exported="false" />
        <activity
            android:name="com.example.chats.Activities.Chat"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.chats.Activities.Profile"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.chats.Activities.OTP"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.chats.Activities.PhoneNumber"
            android:exported="false"
            android:theme="@style/Theme.ChatsApp.NoActionBar"></activity>
        <activity
            android:name="com.example.chats.Activities.MainActivity"
            android:exported="false" />
    </application>

</manifest>